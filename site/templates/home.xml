<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>
				<div class="menu">
						<div class="menu_container">

						<a href="javascript:void(0)" class="logo"></a>
						<cms:module
							name="contact_form"
							action="show"
							text_id="contact"
							/>
						<a
							href="'tel:'.urlencode(Language::getText('phone'))"
							cms:eval="href"
							class="phone"
							>
							<cms:text constant="phone"/>
							<cms:svg file="../images/phone-circle.svg"/>
						</a>
					</div>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="header_article"
					template="parts/article.xml"
					/>

				<div class="figures">
					<figure>
						<cms:module
							name="gallery"
							action="show_image_list"
							group="desktop_image_gallery"
							template="parts/image.xml"
							/>
					</figure>

					<div class="phone">
						<cms:module
							name="gallery"
							action="show_image_list"
							group="mobile_image_gallery"
							template="parts/image2.xml"
							/>							
					</div>
				</div>
				<div class="form_wrap">
					<p><cms:text constant="form_title"/></p>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>		

			</header>

			<section class="about">
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="parts/article_about.xml"
					/>

				<cms:module
					name="articles"
					action="show_group"
					text_id="features"
					template="parts/article_group.xml"
					/>	
			</section>

			<section class="gallery">
				<h2><cms:text constant="gallery_title"/></h2>
				<div class="sites_container">
					<cms:module
						name="gallery"
						action="show_group_list"
						container="way2cu_sites"
						template="parts/container.xml"
						/>
				</div>	
				<div class="controls">		
					<a href="javascript:void(0)" class="mobile">
						<cms:svg file="../images/mobile-icon.svg"/>
					</a>
					<a href="javascript:void(0)" class="tablet">
						<cms:svg file="../images/tablet-icon.svg"/>
					</a>
					<a href="javascript:void(0)" class="desktop">
						<cms:svg file="../images/desktop-icon.svg"/>
					</a>
				</div>
				<a href="javascript:void(0)" class="next"></a>
				<a href="javascript:void(0)" class="previous"></a>
			</section>
		</body>
	</html>
</document>
