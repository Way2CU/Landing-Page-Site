<document>
	<div class="site">
		<div class="info">
			<h3><cms:var param="name" multilanguage="yes"/></h3>
			<p><cms:var param="description" multilanguage="yes"/></p>
		</div>

		<a
			href="url_Make($params['id'], 'preview')"
			cms:eval="href"
			target="preview"
			>
			<cms:module
				name="gallery"
				action="show_image_list"
				group_id="$params['id']"
				template="parts/images.xml"
				cms:eval="group_id"
				/>
		</a>
	</div>
</document>
